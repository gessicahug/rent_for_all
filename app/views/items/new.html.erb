<div class="container px-5 w-50 p-2">
  <h2 class="ml-5 my-5">PUBLIQUE UM ITEM</h2>
  <%= simple_form_for @item do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category, collection: Item::CATEGORIES %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: 'btn btn-primary w-100' %>
  <% end %>
</div>
