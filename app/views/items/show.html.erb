<h1><%= @item.name %></h1>


<div class="card-product m-3">
  <%= image_tag 'tool.png' %>
  <div class="card-product-infos">
    <h2><%=@item.name%></h2>
    <p><%=@item.description%> <strong>Valor de aluguel por dia : R$<%=@item.price%></strong></p>
  </div>
</div>

<% if policy(@item).edit? %>
  <%= link_to "Edit Item", edit_item_path(@item), class: "btn btn-primary" %>
<% end %>
<%if policy(@item).destroy? %>
  <%= link_to "Delete Item", item_path(@item), method: 'DELETE', data: {confirm: 'Are you sure?'}, class: "btn btn-primary" %>
<% else %>
   <%= link_to "Rent", item_rents_path(@item), method: :post, data: {confirm: "Rent #{@item.name}?"}, class: "btn btn-success" %>
<%end %>
<%= link_to 'Items', root_path(@item) %>
