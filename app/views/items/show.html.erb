<div class="container mt-4 mb-4 p-4">
  <h1><%= @item.name %></h1>
  <div class="card-product m-3">
    <%= image_tag 'tool.png' %>
    <div class="card-product-infos">
      <h2><%=@item.name%></h2>
      <p><%=@item.description%> <strong>Valor de aluguel por dia : R$<%=@item.price%></strong></p>
    </div>
  </div>
  <% if policy(@item).edit? %>
    <%= link_to "Editar", edit_item_path(@item), class: "btn btn-secondary" %>
  <% end %>
  <%if policy(@item).destroy? && @item.rented == false %>
    <%= link_to "Deletar", item_path(@item), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-warning" %>
  <% elsif @item.rented == false %>
    <%= link_to "Alugue Agora", item_rents_path(@item), method: :post, data: {confirm: "Rent #{@item.name}?"}, class: "btn btn-success" %>
  <%end %>
  <%= link_to 'Voltar', items_path(@item), class: "btn btn-secondary" %>
</div>
